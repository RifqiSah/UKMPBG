<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_list_lowongan_bidang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="@string/dummy"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/list_1"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_list_lowongan_kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:layout_weight="3"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="10sp"
                android:background="@drawable/kategori_layout_default"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_list_lowongan_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="1dp"
            android:paddingTop="5dp"
            android:text="@string/dummy"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/list_2" />

        <TextView
            android:id="@+id/txt_list_lowongan_kantor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="@string/dummy"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/list_2"/>

    </LinearLayout>
</android.support.v7.widget.CardView>